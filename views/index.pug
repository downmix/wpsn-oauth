extends layout/main.pug

block body
  h1 index

  p 현재 로그인 된 사용자의 인증 제공자: #{req.user.provider}
  p 현재 로그인 된 사용자의 식별자: #{req.user.provider_user_id}
  p 현재 로그인 된 사용자의 이름: #{req.user.user_name}
